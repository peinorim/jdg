<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paocorp.joueurdugrenier" >

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:name="com.paocorp.joueurdugrenier.models.ShowAdsApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateVisible|stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".youtube.PlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_player"
            android:theme="@style/AppTheme.Youtube"
            android:windowSoftInputMode="adjustResize|stateVisible|stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".twitter.TwitterActivity"
            android:label="@string/twitter_jdg"
            android:theme="@style/AppTheme.Twitter.NoActionBar" >
            <data
                android:host="t4jsample"
                android:scheme="oauth" />
        </activity>
        <activity
            android:name=".twitter.WebViewActivity"
            android:label="@string/login_instructions"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
