<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_darken2</item>
        <item name="colorPrimaryDark">@color/yellow_darken4</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppTheme.Bazar">
        <item name="colorPrimary">@color/green_darken2</item>
        <item name="colorPrimaryDark">@color/green_darken4</item>
    </style>

    <style name="AppTheme.Bazar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Bazar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Twitter">
        <item name="colorPrimary">@color/blue_twitter</item>
        <item name="colorPrimaryDark">@color/blue_darken2</item>
    </style>

    <style name="AppTheme.Twitter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Twitter">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Youtube" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red_darken2</item>
        <item name="colorPrimaryDark">@color/red_darken4</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_darken4</item>
        <item name="colorPrimaryDark">@color/green_darken4</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
